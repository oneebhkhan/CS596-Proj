<scene version="2.0.0">
	    <!-- <path value="/Users/adamstreed/Dropbox/work/Ag_AI/simulation/practice"/> -->

	<integrator type="path">
		<integer name="max_depth" value="10"/>
	</integrator>
	
	<sensor type="perspective">
    	<transform name="to_world">
        	<!-- Camera pointing at origin <0,0,0> from slightly off-axis
        		"up" direction is positive y -->
        	<lookat origin="-3, 5, -40" target="0, 0, 0" up="0, 1, 0"/>
    	</transform>
		<!-- WHAT DOES STRATIFIED SAMPLER DO? -->
    	<sampler type="stratified">
    		<integer name="sample_count" value="16"/>
    	</sampler>
	</sensor>

	<!-- corn plant from OBJ file (mistuba docs strongly discourage OBJs) -->
    <shape type="obj">
    	<string name="filename" value="Corn3.obj"/>
    	<transform name="to_world">
    		<!-- translate value="0, -4, 2"/ -->
    		<rotate value="1, 0, 0" angle="-90"/>
    		<scale value=".5"/>
		</transform>
    	<bsdf type="diffuse">
    		<rgb name="reflectance" value=".9, .9, .9"/>
    	</bsdf>
    	<!-- irradiance meter requires film of 1x1 pixel -->
    	<sensor type="irradiancemeter">
    		<sampler type="stratified">
    			<integer name="sample_count" value="16"/>
    		</sampler>
    		<film type="hdrfilm">
    			<integer name="width" value="100"/>
    			<integer name="height" value="100"/>
    			<string name = "pixel_format" value="luminance"/>
    			<rfilter type="box"/>
    		</film>
    	</sensor>
	</shape>
	
	<!-- spherical occluder -->
	<shape type="sphere">
    	<point name="center" x="5" y="2" z="-5"/>
    	<float name="radius" value="2"/>
	<bsdf type="diffuse"/>
    </shape>
	

	<!-- the sun as directional emitter (this is what we want I think) -->
	<emitter type="directional">
		<spectrum name="irradiance" value = "1.0"/>
		<vector name="direction" value="0, 0, 1"/>
	</emitter>
		
	
</scene>